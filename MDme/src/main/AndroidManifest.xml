        <activity
            android:name=".AppointmentShowActivity"
            android:label="@string/title_activity_appointment_show" >
        </activity>
        <activity
            android:name=".RequestedAppointmentsActivity"
            android:label="@string/title_activity_requested_appointments"
            android:parentActivityName=".AppointmentMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.MDmde.mobile.AppointmentMenuActivity" />
        </activity>
        <activity
            android:name=".AppointmentCreateActivity"
            android:label="@string/title_activity_appointment_create"
            android:parentActivityName=".AppointmentMenuActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.MDmde.mobile.AppointmentMenuActivity" />
        </activity>
    </application>

